<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" 
    content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Tomorrow Treinamentos</title>

    <link rel="stylesheet" href="../../public/css/style.css">
</head>
<body>
  <%- include("includes/header") %> 
  <section class="treinamento">
    <div class="container">
      <h2>Treinamento <%= curso.nome %></h2>
      <br>
      <% for (let i = 0; i < modulos.length; i++) { %>
        <h2><%= modulos[i].nome %> </h2>
        <% for (let j = 0; j < aulas.length; j++) { %>
          <% if (aulas[j].modulo_id == modulos[i].id) { %>
            <% if (atual.id == aulas[j].id) { %>
              <h3><%= aulas[j].nome %> - ATUAL</h3>
            <% } else { %>
              <h3><%= aulas[j].nome %></h3>
            <% } %>
          <% } %>
        <% } %>
      <% } %>
    </div><!-- container -->
  </section><!-- treinamento -->
  <%- include("includes/footer") %>
</body>
</html>